{
    "name": "mask_module_imagenette_finetune",
    "n_gpu": 1,
    "module": "LearnMaskNet",
    "data_loader": {
        "type": "TrainDataLoader",
        "args": {
            "data_dir": "../data/processed/train",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "model": {
        "type": "DefaultModel",
        "args": {
            "input_nc": 3,
            "use_dropout": true
        }
    },
    "loss": {
        "type": "bce_with_logits",
        "args": {
        }
    },
    "metrics": [
        "accuracy",
        "precision",
        "recall",
        "f1_score"
    ],
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.00001,
            "betas": [
                0.5,
                0.999
            ],
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type": "LambdaLR",
        "args": {
            "lr_lambda_tag": "original"
        }
    },
    "trainer": {
        "type": "DefaultTrainer",
        "args": {
            "epochs": 100,
            "save_dir": "../experiments/mask_module",
            "save_period": 10,
            "verbosity": 2,
            "monitor": "min val_loss",
            "early_stop": 20,
            "tensorboardX": true,
            "log_dir": "../experiments/mask_module/runs",
            "resume": "../pretrained_models/mask_module.pth"
        }
    }
}